@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FAI Enghlish</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(to right, #FFA53A, #F4CA7A);
            font-family: Arial, sans-serif;
        }

        .container {
            text-align: center;
            background: rgba(255, 255, 255, 0.9);
            padding: 50px; /* Tăng padding thêm */
            border-radius: 25px; /* Bo góc lớn hơn */
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            width: 500px; /* Tăng chiều rộng khung lên 500px */
        }

        .avatar {
            width: 250px; /* Tăng kích thước ảnh đại diện */
            height: 250px;
            border-radius: 50%;
            overflow: hidden;
            margin: 0 auto 40px; /* Tăng khoảng cách phía dưới */
        }

            .avatar img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .name {
            font-size: 36px; /* Tăng kích thước chữ */
            color: #333;
            margin-bottom: 10px;
        }

        .language {
            font-size: 20px; /* Tăng kích thước chữ */
            color: #666;
            margin-bottom: 40px;
        }

        .navigation {
            display: flex;
            justify-content: center;
            gap: 20px; /* Tăng khoảng cách giữa các nút */
            margin-bottom: 40px;
        }

        .nav-btn {
            width: 50px; /* Tăng kích thước nút điều hướng */
            height: 50px;
            border: 1px solid #ccc;
            border-radius: 50%;
            background: #fff;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 22px; /* Tăng kích thước chữ */
            color: #666;
        }

        a {
            text-decoration: none;
        }

            .nav-btn.active {
                background: #ccc;
            }

        .start-btn {
            background-color: #ff4d94;
            color: white;
            padding: 20px 40px; /* Tăng kích thước nút */
            border: none;
            border-radius: 35px; /* Bo góc lớn hơn */
            font-size: 22px; /* Tăng kích thước chữ */
            cursor: pointer;
        }
        .start-btn:hover {
                background-color: #e60073;
        }
 
    </style>
</head>
<body>
    <div class="container">
        <div class="avatar">
            <img src="https://learning.kynaforkids.vn/images/dashboard/kid/chatBot/models/kyna-female1.png" alt="Avatar">
        </div>
        <div class="name">Jessica</div>
        <div class="language">British English</div>
     @*    <div class="navigation">
            <div class="nav-btn"><</div>
            <div class="nav-btn active">1/4</div>
            <div class="nav-btn">></div>
        </div> *@
        <a asp-controller="SpeakFreely" asp-action="BotFreeTalk" class="start-btn">Bắt đầu luyện tập</a>

    </div>
</body>
</html>