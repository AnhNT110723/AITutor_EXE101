
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Active page</title>
    <style>


        body {
            font-family: Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-color: #f4f4f9;
            color: #333;
        }
        .container {
            text-align: center;
            padding: 20px;
            border-radius: 8px;
            background-color: #ffffff;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }
        h1 {
            font-size: 24px;
            color: #333;
            margin-bottom: 20px;
        }
        .message, .error {
            font-size: 16px;
            padding: 10px;
            margin: 15px 0;
            border-radius: 4px;
        }
        .message {
            background-color: #e9f7ef;
            color: #28a745;
        }
        .error {
            background-color: #fbeaea;
            color: #dc3545;
        }
        .back-to-login {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 14px;
            color: #007bff;
            background-color: #e7f1ff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }
        .back-to-login:hover {
            background-color: #cce0ff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            backdrop-filter: blur(2px) brightness(0.5);
            background: url("/images/2024-Renault-Embleme-Concept-005-2000.jpg") no-repeat center;
            background-size: cover;
            padding: 30px;
        }


        .container {
            position: relative;
            max-width: 500px;
            width: 100%;
            background: #fff;
            padding: 40px 30px;
            background: rgba(255, 255, 255, 0.8); /* Semi-transparent background */
            backdrop-filter: blur(5px); /* Adds blur effect */
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
            perspective: 2700px;
        }

  


        .container #flip {
            display: none;
        }


    </style>
</head>
<body>
    <div class="container">
        <h1>Account Activation Status</h1>
        @{
            if(ViewData["InvalidToken"] != null)
            {
                <div  class="error">
                    <p>Invalid Token</p>
                </div>
            } if(ViewData["Tokenexpired"] != null)
            {
                <div class="error">
                    <p>This link has expired. Please go back to Login and try again.</p>
                </div>
            } 
            if(ViewData["UserNotFound"] != null)
            {
                <div  class="error">
                    <p>User Not Found</p>
                </div>
            } 
            if(ViewData["AccountLocked"] != null)
            {
                <div class="error">
                    <p>This account is locked</p>
                </div>
            } 
            if(ViewData["Accountactivated"] != null)
            {
                <div  class="message">
                    <p>Account activated</p>
                </div>
            }
            if (ViewData["Tokenvalid"] != null)
            {
                <div  class="message">
                    <p>Your account has been activated successfully.</p>
                </div>
            }    
        }
        <a  asp-controller="Account" asp-action="Login" class="back-to-login">Back to login</a>
    </div>
</body>
</html>
