    <style>
        :root {
            --primary-color: #FF6B6B;
            --secondary-color: #4ECDC4;
            --accent-color: #FFE66D;
            --text-color: #2C3E50;
            --background-color: #F7F9FC;
        }

        body {
            background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
            font-family: 'Comic Sans MS', cursive, sans-serif;
            min-height: 100vh;
        }

        .header {
            background: linear-gradient(to right, #FF9800, #FF5722);
            padding: 10px;
            border-radius: 10px;
            color: white;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .pronoun .sticky-wrapper {
            height: auto;
        }


        .parent-progress {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .progress {
            flex-grow: 1;
            background: #fff;
            border-radius: 12px;
            margin: 0;
            height: 15px;
        }

        .progress-bar-custom {
            height: 5px;
            background-color: #F50;
            width: 10%;
            height: 100%;
            border-radius: 12px;
        }

        .card-custom {
            background-color: white;
            border-radius: 10px;
            padding-bottom: 15px;
            overflow: hidden;
        }

        .parent-img {
            margin: 0 auto;
            margin-top: 35px;
            width: 320px;
            height: 320px;
            overflow: hidden;
        }

            .parent-img img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .mic-btn {
            bottom: 0;
            margin: 0 auto;
            background-color: orange;
            color: white;
            border: none;
            border-radius: 50%;
            width: 80px;
            height: 80px;
            font-size: 24px;
        }

        .container.pronoun {
            background: none;
            padding: 0px !important;
        }

        .text-header {
            background-color: #cbd2de;
            padding: 10px;
        }

            .text-header h5 {
                margin: 0;
                text-align: start;
            }

        /* .card-custom.number2 {
                    height: 532px;
                } */

        .frame-text {
            height: 320px;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .frame-text h4 {
                font-weight: 700;
                color: #475467;
            }

        .pronunciation-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 30px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            position: relative;
            overflow: hidden;
            border: 8px solid var(--accent-color);
        }

            .pronunciation-container::before {
                content: '';
                position: absolute;
                top: -50px;
                right: -50px;
                width: 150px;
                height: 150px;
                background: var(--accent-color);
                border-radius: 50%;
                opacity: 0.4;
                animation: float 6s ease-in-out infinite;
            }

            .pronunciation-container::after {
                content: '';
                position: absolute;
                bottom: -30px;
                left: -30px;
                width: 120px;
                height: 120px;
                background: var(--secondary-color);
                border-radius: 50%;
                opacity: 0.4;
                animation: float 8s ease-in-out infinite;
            }


        h2 {
            color: var(--primary-color);
            font-size: 3rem;
            text-align: center;
            margin-bottom: 2rem;
            text-shadow: 3px 3px 6px rgba(0,0,0,0.1);
            position: relative;
            padding: 1rem;
        }

            h2::before, h2::after {
                content: '🎯';
                position: absolute;
                top: 50%;
                transform: translateY(-50%);
                font-size: 2rem;
            }

            h2::before {
                left: 0;
            }

            h2::after {
                right: 0;
            }

        .input-group {
            margin: 2rem auto;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            border-radius: 20px;
            overflow: hidden;
            transform: translateY(0);
            transition: transform 0.3s ease;
            max-width: 800px;
            display: flex;
            align-items: stretch;
        }

            .input-group:hover {
                transform: translateY(-5px);
            }

        .form-control {
            flex: 1;
            border: 4px solid var(--secondary-color);
            border-right: none;
            padding: 1.2rem 1.5rem;
            font-size: 1.2rem;
            border-radius: 20px 0 0 20px;
            background: rgba(255, 255, 255, 0.9);
            height: auto;
        }

        .btn-primary {
            flex: 0 0 auto;
            background: linear-gradient(45deg, var(--primary-color), #ff8e8e);
            border: none;
            padding: 1.2rem 2rem;
            font-size: 1.2rem;
            border-radius: 0 20px 20px 0;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            white-space: nowrap;
            min-width: 150px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .btn-primary i {
                margin-right: 8px;
            }

            .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(255,107,107,0.4);
            }

            .btn-primary::after {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: rgba(255,255,255,0.2);
                transform: rotate(45deg);
                transition: all 0.3s ease;
            }

            .btn-primary:hover::after {
                transform: rotate(45deg) translate(50%, 50%);
            }

        .word-display {
            text-align: center;
            margin: 3rem 0;
            padding: 3rem;
            background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
            border-radius: 30px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            border: 6px solid var(--accent-color);
            position: relative;
            overflow: hidden;
        }

        .word {
            font-size: 4.5rem;
            font-weight: bold;
            color: var(--text-color);
            margin-bottom: 1.5rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }



        .phonetic {
            font-size: 2rem;
            color: var(--secondary-color);
            margin-bottom: 2rem;
            font-style: italic;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }

        .audio-controls {
            display: flex;
            justify-content: center;
            gap: 3rem;
            margin: 3rem 0;
            align-items: center;
        }

        audio {
            width: 400px;
            height: 50px;
            border-radius: 30px;
            background: var(--background-color);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .record-btn {
            background: linear-gradient(45deg, var(--primary-color), #ff8e8e);
            color: white;
            border: none;
            border-radius: 50%;
            width: 120px;
            height: 120px;
            font-size: 3rem;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(255,107,107,0.3);
            position: relative;
            overflow: hidden;
        }

            .record-btn:hover {
                transform: scale(1.1) rotate(5deg);
                box-shadow: 0 10px 30px rgba(255,107,107,0.4);
            }

            .record-btn.recording {
                background: linear-gradient(45deg, #ff4444, #ff6b6b);
                animation: pulse 1.5s infinite;
            }

        .score-display {
            margin-top: 3rem;
            padding: 3rem;
            border-radius: 30px;
            background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            border: 6px solid var(--secondary-color);
            position: relative;
            overflow: hidden;
        }

            .score-display h4 {
                color: var(--primary-color);
                text-align: center;
                margin-bottom: 2.5rem;
                font-size: 2.5rem;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
            }

            .score-display .row {
                display: flex;
                justify-content: space-around;
                text-align: center;
                gap: 2rem;
            }

            .score-display p {
                font-size: 1.8rem;
                color: var(--text-color);
                margin: 0;
                font-weight: bold;
            }

            .score-display span {
                display: block;
                font-size: 3rem;
                font-weight: bold;
                color: var(--secondary-color);
                margin-top: 1rem;
                text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
            }



        /* Decorative elements */
        .decoration {
            position: absolute;
            width: 60px;
            height: 60px;
            background-size: contain;
            background-repeat: no-repeat;
            opacity: 0.6;
            animation: float 6s ease-in-out infinite;
        }

        .decoration-1 {
            top: 20px;
            left: 20px;
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23FF6B6B"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/></svg>');
        }

        .decoration-2 {
            bottom: 20px;
            right: 20px;
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%234ECDC4"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/></svg>');
        }

        /* Floating elements */
        .floating-element {
            position: absolute;
            font-size: 2rem;
            animation: float 6s ease-in-out infinite;
            opacity: 0.6;
        }

            .floating-element:nth-child(1) {
                top: 10%;
                left: 5%;
                animation-delay: 0s;
            }

            .floating-element:nth-child(2) {
                top: 20%;
                right: 5%;
                animation-delay: 1s;
            }

            .floating-element:nth-child(3) {
                bottom: 20%;
                left: 5%;
                animation-delay: 2s;
            }

            .floating-element:nth-child(4) {
                bottom: 10%;
                right: 5%;
                animation-delay: 3s;
            }
    </style>
</head>

