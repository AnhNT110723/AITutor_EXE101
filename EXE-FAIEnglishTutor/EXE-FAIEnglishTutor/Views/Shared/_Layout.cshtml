
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FAI English</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.13/css/intlTelInput.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/course-gen.css">

    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" asp-append-version="true" />
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js" asp-append-version="true"></script>

    <style>
        /* Tạo wrapper để chứa cả navbar và head-info */
        .sticky-wrapper-h110 {
            position: sticky;
            top: 0;
            z-index: 100;
            /* Ưu tiên hiển thị phía trên nội dung khác */
            background: #e9eef5;
            /* Màu nền */
            height: 110px;
            padding-top: 55px;
            margin-top: -52px;
        }

        .mg-top-20 {
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <main role="main">
        <div class="wrapper d-flex align-items-stretch">
<nav id="sidebar" class="active">
                <h1><a asp-area="" asp-controller="home" asp-action="Index" class="logo"><img src="~/Images/concoc.png" alt="Cup"></a></h1>
            <ul class="list-unstyled components mb-5">
                <li>
                    <a asp-area="" asp-controller="Ielts" class="link-test">
                        <span class="fa fa-users"></span>
                        <span class="menu-text">Học Ielts</span>
                    </a>
                </li>
                <li>
                        <a asp-area="Mentee" asp-controller="Toeic" asp-action="Index" class="link-test" data-action="toeic">
                        <span class="fas fa-graduation-cap icon"></span>
                        <span class="menu-text">Học Toeic</span>
                    </a>
                </li>
                <li >
                        <a asp-area="" asp-controller="home" asp-action="Index" class="link-test" data-action="home">
                        <span class="fa fa-frog"></span>
                        <span class="menu-text">AI Tutor</span>

                    </a>
                </li>
                <li>
                        <a asp-area="" asp-controller="Pc" asp-action="index" class="link-test" data-action="podcast">
                        <span class="fas fa-book-open"></span>
                        <span class="menu-text">Podcast</span>
                    </a>
                </li>
                <li>
                        <a  asp-area="" asp-controller="Pronunciation"  class="link-test" data-action="pronunciation">
                        <span class="bi bi-people-fill"></span>
                        <span class="menu-text">Phat am</span>
                    </a>
                </li>
            </ul>

            <div class="footer">
                <p style="color: #667085;">
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is
                    made with <i class="icon-heart" aria-hidden="true"></i> by <a href="https://colorlib.com"
                                                                                  target="_blank">Colorlib.com</a>
                </p>
            </div>
        </nav>
            @RenderBody()
        </div>
    </main>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*     <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script> *@
    <script src="~/js/handle-sidbar/common_sidebar.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.13/js/intlTelInput.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.13/js/utils.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js" asp-append-version="true"></script>

    <script>
        // Lấy URL hiện tại
        const currentPath = window.location.pathname.toLowerCase();
        console.log('Current Path:', currentPath); // Debug URL

        // Lấy tất cả các mục trong sidebar
        const sidebarLinks = document.querySelectorAll('#sidebar .link-test');

        // Duyệt qua từng liên kết
        sidebarLinks.forEach(link => {
            const li = link.parentElement; // Lấy thẻ <li> cha
            const action = link.getAttribute('data-action');

            // Kiểm tra xem URL hiện tại có khớp với action tương ứng không
            if (
                (action === 'home' && (currentPath === '/' || currentPath.includes('/home/index') || currentPath.includes('/home'))) ||
                (action === 'lesson' && currentPath.includes('/lesson')) ||
                (action === 'toeic' && currentPath.includes('/toeic')) ||
                (action === 'podcast' && (currentPath.includes('/pc/index') || currentPath.includes('/pc'))) ||
                (action === 'pronunciation' && currentPath.includes('/pronunciation'))
            ) {
                console.log(`Active item: ${action}`); // Debug mục đang active
                li.classList.add('active');
            } else {
                li.classList.remove('active');
            }
        });
    </script>
    <script>

        // Sidebar toggle functionality
        $(document).ready(function () {

            // Handle mobile menu toggle
            $('.btn-dark.d-inline-block.d-lg-none.ml-auto').on('click', function () {
                var navbar = $('#navbarSupportedContent');
                if (navbar.hasClass('show')) {
                    navbar.removeClass('show');
                } else {
                    navbar.addClass('show');
                }
            });

        });

        const logoutLink = document.getElementById('logout-link');
        if (logoutLink) {
            logoutLink.addEventListener('click', function (event) {
                event.preventDefault();
                Swal.fire({
                    title: 'Are you sure you want to logout?',
                    icon: 'question',
                    confirmButtonText: 'OK',
                    cancelButtonText: 'Cancel',
                    showCancelButton: true,
                    showCloseButton: true,
                    customClass: {
                        confirmButton: 'custom-confirm-btn',
                        cancelButton: 'custom-cancel-btn'
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        console.log('Người dùng đã chọn tiếp tục');
                        localStorage.clear();
                        document.getElementById('logoutForm').submit();
                    } else if (result.isDismissed) {
                        console.log('Người dùng đã hủy hành động');
                    }
                });

            });
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
