    <script>
        // Hàm để cập nhật trạng thái active
        function updateActiveSidebar() {
            const currentPath = window.location.pathname.toLowerCase();
            console.log('Current Path:', currentPath); // Debug URL

            // Lấy tất cả các mục trong sidebar
            const sidebarLinks = document.querySelectorAll('#sidebar .link-test');

            // Xóa lớp active khỏi tất cả các mục
            sidebarLinks.forEach(link => {
                link.parentElement.classList.remove('active');
            });

            // Duyệt qua từng liên kết để thêm lớp active
            sidebarLinks.forEach(link => {
                const li = link.parentElement; // Lấy thẻ <li> cha
                const action = link.getAttribute('data-action');

                // Kiểm tra xem URL hiện tại có khớp với action tương ứng không
                if (
                    (action === 'home' && (currentPath === '/mentee' || currentPath.includes('/home/index'))) ||
                    (action === 'toeic' && currentPath.includes('/mentee/toeic')) ||
                    (action === 'podcast' && currentPath.includes('/mentee/podcast')) ||
                    (action === 'payment' && currentPath.includes('/payment/index'))
                ) {
                    console.log(`Active item: ${action}`); // Debug mục đang active
                    li.classList.add('active');
                }
            });
        }

        // Gọi hàm khi trang được tải
        document.addEventListener('DOMContentLoaded', updateActiveSidebar);

        // Gắn sự kiện nhấp chuột cho các liên kết
        const sidebarLinks = document.querySelectorAll('#sidebar .link-test');
        sidebarLinks.forEach(link => {
            link.addEventListener('click', function (event) {
                // Xóa lớp active khỏi tất cả các mục
                sidebarLinks.forEach(l => l.parentElement.classList.remove('active'));

                // Thêm lớp active cho mục được nhấp
                this.parentElement.classList.add('active');
            });
        });
    </script>
    <script>
        const logoutLink = document.getElementById('logout-link');
        if (logoutLink) {
            logoutLink.addEventListener('click', function (event) {
                event.preventDefault();
                Swal.fire({
                    title: 'Are you sure you want to logout?',
                    icon: 'question',
                    confirmButtonText: 'OK',
                    cancelButtonText: 'Cancel',
                    showCancelButton: true,
                    showCloseButton: true,
                    customClass: {
                        confirmButton: 'custom-confirm-btn',
                        cancelButton: 'custom-cancel-btn'
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        console.log('Người dùng đã chọn tiếp tục');
                        localStorage.clear();
                        document.getElementById('logoutForm').submit();
                    } else if (result.isDismissed) {
                        console.log('Người dùng đã hủy hành động');
                    }
                });

            });
        }
    </script>

    
