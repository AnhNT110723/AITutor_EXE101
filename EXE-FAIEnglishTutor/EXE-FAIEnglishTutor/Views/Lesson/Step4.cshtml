    @section Scripts {
        <script>
            let audioPlayer;
            let playPauseBtn;
            let progressBar;
            let currentTimeSpan;
            let durationSpan;
            let sentences = @Html.Raw(Json.Serialize(ViewBag.Sentences ?? new List<string>()));

            document.addEventListener('DOMContentLoaded', function() {
                initializeAudio();
                loadListeningAudio();
                initializeComparison();
            });

            function initializeAudio() {
                audioPlayer = document.getElementById('listeningAudio');
                playPauseBtn = document.getElementById('playPauseBtn');
                progressBar = document.getElementById('audioProgressBar');
                currentTimeSpan = document.getElementById('currentTime');
                durationSpan = document.getElementById('duration');

                // Play/Pause button
                playPauseBtn.addEventListener('click', togglePlay);

                // Audio event listeners
                audioPlayer.addEventListener('play', updatePlayButton);
                audioPlayer.addEventListener('pause', updatePlayButton);
                audioPlayer.addEventListener('timeupdate', updateProgress);
                audioPlayer.addEventListener('loadedmetadata', () => {
                    durationSpan.textContent = formatTime(audioPlayer.duration);
                });

                // Progress bar click
                document.getElementById('audioProgress').addEventListener('click', function(e) {
                    const percent = e.offsetX / this.offsetWidth;
                    audioPlayer.currentTime = percent * audioPlayer.duration;
                });
            }

            async function loadListeningAudio() {
                try {
                    const audioData = @Html.Raw(Json.Serialize(ViewBag.AudioData));
                    if (!audioData) {
                        throw new Error('Audio data is not available');
                    }

                    // Convert Base64 to Blob
                    const base64Data = audioData.split(',')[1];
                    const byteCharacters = atob(base64Data);
                    const byteNumbers = new Array(byteCharacters.length);

                    for (let i = 0; i < byteCharacters.length; i++) {
                        byteNumbers[i] = byteCharacters.charCodeAt(i);
                    }

                    const byteArray = new Uint8Array(byteNumbers);
                    const blob = new Blob([byteArray], { type: 'audio/mp3' });
                    const audioUrl = URL.createObjectURL(blob);

                    audioPlayer.src = audioUrl;
                    audioPlayer.load();

                    // Clean up the URL when the audio is loaded
                    audioPlayer.onload = () => {
                        URL.revokeObjectURL(audioUrl);
                    };

                } catch (error) {
                    console.error('Error loading audio:', error);
                }
            }

            function togglePlay() {
                if (audioPlayer.paused) {
                    audioPlayer.play();
                } else {
                    audioPlayer.pause();
                }
            }

            function updatePlayButton() {
                playPauseBtn.innerHTML = audioPlayer.paused ?
                    '<i class="fas fa-play"></i>' :
                    '<i class="fas fa-pause"></i>';
            }

            function updateProgress() {
                const percent = (audioPlayer.currentTime / audioPlayer.duration) * 100;
                progressBar.style.width = percent + '%';
                currentTimeSpan.textContent = formatTime(audioPlayer.currentTime);
            }

            function formatTime(seconds) {
                const minutes = Math.floor(seconds / 60);
                seconds = Math.floor(seconds % 60);
                return `${minutes}:${seconds.toString().padStart(2, '0')}`;
            }

            function initializeComparison() {
                // Check all results button
                document.getElementById('checkAllResults').addEventListener('click', checkAllResults);
                document.getElementById('showPracticeSection').addEventListener('click', goToPractice);
                
                // Load dictation data from ViewBag
                loadDictationData();
            }

            function loadDictationData() {
                // Get dictation data from ViewBag (passed from Step3)
                const dictations = @Html.Raw(Json.Serialize(ViewBag.Dictations ?? new List<string>()));
                if (dictations && dictations.length > 0) {
                    displayDictations(dictations);
                } else {
                    // Fallback: show empty state
                    document.querySelectorAll('.dictation-display').forEach(display => {
                        display.innerHTML = '<em>No dictation data available</em>';
                    });
                }
            }

            function displayDictations(dictations) {
                dictations.forEach((dictation, index) => {
                    const display = document.getElementById(`dictation-${index}`);
                    if (display) {
                        display.textContent = dictation;
                    }
                });
            }

            function checkAllResults() {
                const comparisonItems = document.querySelectorAll('.comparison-item');
                let totalAccuracy = 0;
                let totalSentences = 0;
                let totalCorrectWords = 0;
                let totalIncorrectWords = 0;
                let sentencesToPractice = 0;
                let practiceData = [];

                comparisonItems.forEach((item, index) => {
                    const dictationDisplay = item.querySelector('.dictation-display');
                    const userInput = dictationDisplay.textContent.trim();
                    const correctSentence = item.dataset.sentence;
                    const statusBadge = item.querySelector('.status-badge');
                    const resultText = item.querySelector('.result-text');
                    const accuracyValue = item.querySelector('.accuracy-value');
                    const practiceNeeded = item.querySelector('.practice-needed');

                    if (userInput && correctSentence && userInput !== 'No dictation data available') {
                        const result = compareSentences(userInput, correctSentence);
                        displayResult(item, result, index);
                        
                        totalAccuracy += result.accuracy;
                        totalSentences++;
                        totalCorrectWords += result.correctCount;
                        totalIncorrectWords += result.incorrectWords;
                        
                        if (result.incorrectWords > 0) {
                            sentencesToPractice++;
                            practiceData.push({
                                sentence: correctSentence,
                                userInput: userInput,
                                incorrectWords: result.incorrectWords,
                                index: index
                            });
                        }
                    } else {
                        // No input provided
                        statusBadge.textContent = 'No Input';
                        statusBadge.className = 'status-badge incorrect';
                        accuracyValue.textContent = '0%';
                        resultText.innerHTML = '<em>No dictation provided in Step 3</em>';
                    }
                });

                // Show overall results
                const overallAccuracy = totalSentences > 0 ? Math.round(totalAccuracy / totalSentences) : 0;
                showOverallResults(overallAccuracy, totalCorrectWords, totalIncorrectWords, sentencesToPractice);
                
                // Show practice button if needed
                if (practiceData.length > 0) {
                    document.getElementById('showPracticeSection').style.display = 'inline-block';
                }

            localStorage.setItem('practiceData', JSON.stringify(practiceData));
            }

            function compareSentences(userInput, correctSentence) {
                const userWords = userInput.toLowerCase().split(/\s+/).filter(word => word.length > 0);
                const correctWords = correctSentence.toLowerCase().split(/\s+/).filter(word => word.length > 0);

                let correctCount = 0;
                let incorrectWords = 0;
                const analysis = [];

                // Compare words
                userWords.forEach((word, index) => {
                    if (index < correctWords.length && word === correctWords[index]) {
                        correctCount++;
                        analysis.push(`<span class="correct-word">${word}</span>`);
                    } else if (index < correctWords.length) {
                        incorrectWords++;
                        analysis.push(`<span class="incorrect-word">${word}</span>`);
                    } else {
                        incorrectWords++;
                        analysis.push(`<span class="incorrect-word">${word}</span>`);
                    }
                });

                // Check for missing words
                correctWords.forEach((word, index) => {
                    if (index >= userWords.length) {
                        incorrectWords++;
                        analysis.push(`<span class="hidden-word">___</span>`);
                    }
                });

                const accuracy = correctWords.length > 0 ? (correctCount / correctWords.length) * 100 : 0;

                return {
                    accuracy: accuracy,
                    correctCount: correctCount,
                    totalWords: correctWords.length,
                    incorrectWords: incorrectWords,
                    analysis: analysis
                };
            }

            function displayResult(item, result, index) {
                const statusBadge = item.querySelector('.status-badge');
                const resultText = item.querySelector('.result-text');
                const accuracyValue = item.querySelector('.accuracy-value');
                const practiceNeeded = item.querySelector('.practice-needed');

                // Update status badge
                if (result.accuracy === 100) {
                    statusBadge.textContent = 'Perfect';
                    statusBadge.className = 'status-badge correct';
                } else if (result.accuracy >= 80) {
                    statusBadge.textContent = 'Good';
                    statusBadge.className = 'status-badge correct';
                } else {
                    statusBadge.textContent = 'Needs Practice';
                    statusBadge.className = 'status-badge incorrect';
                    practiceNeeded.style.display = 'flex';
                }

                // Update accuracy
                accuracyValue.textContent = `${Math.round(result.accuracy)}%`;

                // Display result (without showing correct answers)
                resultText.innerHTML = result.analysis.join(' ');
            }

            function showOverallResults(accuracy, correct, incorrect, practiceSentences) {
                document.getElementById('totalAccuracy').textContent = `${accuracy}%`;
                document.getElementById('correctWords').textContent = correct;
                document.getElementById('incorrectWords').textContent = incorrect;
                document.getElementById('practiceSentences').textContent = practiceSentences;
                
                document.querySelector('.overall-results').style.display = 'block';
            }

            function goToPractice() {
                // Submit the form to go to Step 5
                document.getElementById('nextStepForm').submit();
            }
        </script>
    }
