    @section Scripts {
        <script>
            let audioPlayer;
            let playPauseBtn;
            let progressBar;
            let currentTimeSpan;
            let durationSpan;
            let sentences = @Html.Raw(Json.Serialize(ViewBag.Sentences ?? new List<string>()));

            document.addEventListener('DOMContentLoaded', function() {
                initializeAudio();
                loadListeningAudio();
                initializeDictation();
            });

            function initializeAudio() {
                audioPlayer = document.getElementById('listeningAudio');
                playPauseBtn = document.getElementById('playPauseBtn');
                progressBar = document.getElementById('audioProgressBar');
                currentTimeSpan = document.getElementById('currentTime');
                durationSpan = document.getElementById('duration');

                // Play/Pause button
                playPauseBtn.addEventListener('click', togglePlay);

                // Audio event listeners
                audioPlayer.addEventListener('play', updatePlayButton);
                audioPlayer.addEventListener('pause', updatePlayButton);
                audioPlayer.addEventListener('timeupdate', updateProgress);
                audioPlayer.addEventListener('loadedmetadata', () => {
                    durationSpan.textContent = formatTime(audioPlayer.duration);
                });

                // Progress bar click
                document.getElementById('audioProgress').addEventListener('click', function(e) {
                    const percent = e.offsetX / this.offsetWidth;
                    audioPlayer.currentTime = percent * audioPlayer.duration;
                });
            }

            async function loadListeningAudio() {
                try {
                    const audioData = @Html.Raw(Json.Serialize(ViewBag.AudioData));
                    if (!audioData) {
                        throw new Error('Audio data is not available');
                    }

                    // Convert Base64 to Blob
                    const base64Data = audioData.split(',')[1];
                    const byteCharacters = atob(base64Data);
                    const byteNumbers = new Array(byteCharacters.length);

                    for (let i = 0; i < byteCharacters.length; i++) {
                        byteNumbers[i] = byteCharacters.charCodeAt(i);
                    }

                    const byteArray = new Uint8Array(byteNumbers);
                    const blob = new Blob([byteArray], { type: 'audio/mp3' });
                    const audioUrl = URL.createObjectURL(blob);

                    audioPlayer.src = audioUrl;
                    audioPlayer.load();

                    // Clean up the URL when the audio is loaded
                    audioPlayer.onload = () => {
                        URL.revokeObjectURL(audioUrl);
                    };

                } catch (error) {
                    console.error('Error loading audio:', error);
                }
            }

            function togglePlay() {
                if (audioPlayer.paused) {
                    audioPlayer.play();
                } else {
                    audioPlayer.pause();
                }
            }

            function updatePlayButton() {
                playPauseBtn.innerHTML = audioPlayer.paused ?
                    '<i class="fas fa-play"></i>' :
                    '<i class="fas fa-pause"></i>';
            }

            function updateProgress() {
                const percent = (audioPlayer.currentTime / audioPlayer.duration) * 100;
                progressBar.style.width = percent + '%';
                currentTimeSpan.textContent = formatTime(audioPlayer.currentTime);
            }

            function formatTime(seconds) {
                const minutes = Math.floor(seconds / 60);
                seconds = Math.floor(seconds % 60);
                return `${minutes}:${seconds.toString().padStart(2, '0')}`;
            }

            function initializeDictation() {
                // Add word count functionality
                const dictationInputs = document.querySelectorAll('.dictation-input');
                dictationInputs.forEach(input => {
                    input.addEventListener('input', function() {
                        const wordCount = this.value.trim().split(/\s+/).filter(word => word.length > 0).length;
                        this.parentElement.querySelector('.word-count').textContent = wordCount + ' words';

                        // Check completion status
                        checkCompletionStatus();
                    });
                });

                // Continue to next step button
                document.getElementById('continueToNext').addEventListener('click', function() {
                    if (validateAllSentences()) {
                        // Collect dictation data and submit form
                        collectAndSubmitDictations();
                    } else {
                        alert('Please complete all sentences before continuing.');
                    }
                });

                // Next step form submission
                           document.getElementById('nextStepForm').addEventListener('submit', function(e) {
                if (!validateAllSentences()) {
                    e.preventDefault();
                    alert('Please complete all sentences before continuing.');
                    return false;
                }
                e.preventDefault(); // tránh double submit
                collectAndSubmitDictations();
            });
            }

            document.getElementById('nextStepForm').addEventListener('submit', function(e) {
                e.preventDefault();
                collectAndSubmitDictations();
            });

            function collectAndSubmitDictations() {
                const dictationInputs = document.querySelectorAll('.dictation-input');
                const dictations = [];
                dictationInputs.forEach(input => {
                    dictations.push(input.value.trim());
                });

                // Set the dictations data in the hidden input
                document.getElementById('dictationsData').value = JSON.stringify(dictations);

                // Submit the form (sau khi đã gán value)
                document.getElementById('nextStepForm').addEventListener('submit', function(e) {
                    e.preventDefault();
                    this.submit();
                });
            }

            function checkCompletionStatus() {
                const dictationItems = document.querySelectorAll('.dictation-item');
                let completedCount = 0;
                const totalCount = dictationItems.length;

                dictationItems.forEach((item, index) => {
                    const input = item.querySelector('.dictation-input');
                    const statusIndicator = item.querySelector('.status-indicator');
                    const text = input.value.trim();

                    if (text.length > 0) {
                        // Mark as complete
                        statusIndicator.textContent = 'Complete';
                        statusIndicator.className = 'status-indicator complete';
                        input.classList.add('complete');
                        completedCount++;
                    } else {
                        // Mark as incomplete
                        statusIndicator.textContent = 'Incomplete';
                        statusIndicator.className = 'status-indicator incomplete';
                        input.classList.remove('complete');
                    }
                });

                // Update completion summary
                document.getElementById('completionStatus').textContent = `${completedCount} of ${totalCount} sentences completed`;

                // Enable/disable continue button
                const continueBtn = document.getElementById('continueToNext');
                const nextStepBtn = document.getElementById('nextStepBtn');
                if (completedCount === totalCount) {
                    continueBtn.disabled = false;
                    continueBtn.style.opacity = '1';
                    nextStepBtn.disabled = false;
                    nextStepBtn.style.opacity = '1';
                } else {
                    continueBtn.disabled = true;
                    continueBtn.style.opacity = '0.6';
                    nextStepBtn.disabled = true;
                    nextStepBtn.style.opacity = '0.6';
                }
            }

            function validateAllSentences() {
                const dictationInputs = document.querySelectorAll('.dictation-input');
                let allCompleted = true;

                dictationInputs.forEach((input, index) => {
                    if (input.value.trim().length === 0) {
                        allCompleted = false;
                        // Highlight incomplete sentence
                        const dictationItem = input.closest('.dictation-item');
                        dictationItem.style.border = '2px solid #dc3545';
                        dictationItem.style.backgroundColor = '#fff5f5';

                        // Remove highlight after 3 seconds
                        setTimeout(() => {
                            dictationItem.style.border = '';
                            dictationItem.style.backgroundColor = '';
                        }, 3000);
                    }
                });

                return allCompleted;
            }

            function playSentence(index) {
                // Calculate approximate time for this sentence
                const totalDuration = audioPlayer.duration;
                const sentenceCount = sentences.length;
                const timePerSentence = totalDuration / sentenceCount;
                const startTime = index * timePerSentence;
                const endTime = (index + 1) * timePerSentence;

                audioPlayer.currentTime = startTime;
                audioPlayer.play();

                // Stop at the end of the sentence
                const checkTime = setInterval(() => {
                    if (audioPlayer.currentTime >= endTime) {
                        audioPlayer.pause();
                        clearInterval(checkTime);
                    }
                }, 100);
            }

            function replaySentence(index) {
                const replayBtn = document.querySelector(`[data-index="${index}"] .replay-sentence-btn`);
                const currentReplays = parseInt(replayBtn.dataset.replays);

                if (currentReplays >= 3) {
                    alert('You have reached the maximum number of replays (3) for this sentence.');
                    return;
                }

                // Increment replay count
                replayBtn.dataset.replays = currentReplays + 1;
                replayBtn.querySelector('.replay-count').textContent = `${currentReplays + 1}/3`;

                // Play the sentence
                playSentence(index);

                // Disable button if max replays reached
                if (currentReplays + 1 >= 3) {
                    replayBtn.disabled = true;
                    replayBtn.style.opacity = '0.5';
                }
            }
        </script>
    }
