            overflow: hidden;
        }

        .audio-progress-bar {
            height: 100%;
            background: #ff9838;
            border-radius: 4px;
            transition: width 0.1s linear;
            position: relative;
        }

            .audio-progress-bar::after {
                content: '';
                position: absolute;
                right: -2px;
                top: 50%;
                transform: translateY(-50%);
                width: 12px;
                height: 12px;
                background: #ff9838;
                border-radius: 50%;
                box-shadow: 0 0 5px rgba(0,0,0,0.2);
            }

