                    $('#plusMenu').hide();
                }
            });

            // Tự động điều chỉnh chiều cao textarea và co khu vực tin nhắn
            $('#status_message').on('input', function () {
                this.style.height = 'auto'; // Reset chiều cao
                if (this.value === '') {
                    this.style.height = '40px'; // Trở về 40px khi trống
                } else {
                    this.style.height = (this.scrollHeight) + 'px'; // Đặt theo nội dung khi có text
                }

                // Điều chỉnh chiều cao của popup-messages
                var footerHeight = $('.popup-messages-footer').outerHeight();
                var headerHeight = $('.popup-head').outerHeight();
                var newMessagesHeight = 450 - headerHeight - footerHeight;
                $('.popup-messages').css('height', newMessagesHeight + 'px');
            });

            $('.plus-btn').click(function (e) {
                e.preventDefault();
                $('#plusMenu').toggle();
            });

            $(document).click(function (e) {
                if (!$(e.target).closest('.plus-menu, .plus-btn').length) {
                    $('#plusMenu').hide();
                }
            });

            $("#send-button").click(function () {
                var message = $("#status_message").val();
                if (message) {
                    // Thêm tin nhắn người dùng
                    $("#chat-messages").append(
                        `<div class="direct-chat-msg">
                                <div class="direct-chat-text" style="background: #e0f7fa;">
                                    ${message}
                                </div>
                                <div class="direct-chat-timestamp">
                                    ${new Date().toLocaleTimeString()}
                                </div>
                            </div>`
                    );
                    $("#status_message").val("");
                    $('#status_message').css('height', '40px'); // Reset chiều cao textarea

                    // Cuộn xuống dưới cùng ngay sau khi thêm tin nhắn người dùng
                    $("#chat-container").scrollTop($("#chat-container")[0].scrollHeight);

                    // Gửi yêu cầu tới server
                    $.post("/Chat/SendMessage", { message: message }, function (data) {
                        if (data.success) {
                            $("#chat-messages").append(
                                `<div class="direct-chat-msg">
                                        <div class="direct-chat-text">
                                            ${data.response}
                                        </div>
                                        <div class="direct-chat-timestamp">
                                            ${new Date().toLocaleTimeString()}
                                        </div>
                                    </div>`
                            );
                        } else {
                            $("#chat-messages").append(
                                `<div class="direct-chat-msg">
                                        <div class="direct-chat-text">
                                            ${data.response}
                                        </div>
                                        <div class="direct-chat-timestamp">
                                            ${new Date().toLocaleTimeString()}
                                        </div>
                                    </div>`
                            );
                        }
                        // Cuộn xuống dưới cùng sau khi thêm tin nhắn từ server
                        $("#chat-container").scrollTop($("#chat-container")[0].scrollHeight);
                    }).fail(function () {
                        $("#chat-messages").append(
                            `<div class="direct-chat-msg">
                                    <div class="direct-chat-text">
                                        Có lỗi xảy ra khi gửi tin nhắn.
                                    </div>
                                    <div class="direct-chat-timestamp">
                                        ${new Date().toLocaleTimeString()}
                                    </div>
                                </div>`
                        );
                        $("#chat-container").scrollTop($("#chat-container")[0].scrollHeight);
                    });
                }
            });

            $("#status_message").keypress(function (e) {
                if (e.which == 13) {
                    e.preventDefault();
                    $("#send-button").click();
                }
            });
        });
    </script>

