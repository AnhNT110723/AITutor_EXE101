    </div>





</div>


@section Scripts {
    <script src="~/js/handle-sidbar/home-sidebar.js"></script>
    <style>

        body {
            font-family: 'Open Sans', sans-serif;
            margin: 0;
            padding: 0;
        }


        body {
            background-color: #0f111a;
            color: #ffffff;
            font-family: "Segoe UI", sans-serif;
        }

        .pricing-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 40px;
        }

        .pricing-card {
            background: linear-gradient(to top, #e2e6e6, #fff); /*f1faee f5f2ee*/
            color: #1a1a1a; /* nên đổi màu chữ nếu nền quá sáng */
            border-radius: 20px;
            padding: 20px;
            width: 300px;
            height: 374px;
            box-shadow: 0 0 15px #00000060;
            transition: transform 0.3s;
        }

            .pricing-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
            }

        .featured {
            position: absolute;
            top: 0;
            right: 0;
            background: gold;
            color: #000;
            font-size: 12px;
            padding: 3px 10px;
            border-top-right-radius: 20px;
            border-bottom-left-radius: 10px;
        }

        .plan-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 10px;
            text-align: center;
        }

        .price {
            font-size: 1.2rem;
            text-align: center;
            margin-bottom: 20px;
        }

        .features {
            list-style: none;
            padding: 0;
        }

            .features li {
                margin-bottom: 10px;
            }

        .btn-pay {
            width: 100%;
            background-color: orange;
            border: none;
            margin-top: 35px;
        }

        .avatar-glow {
            border-radius: 50%;
            border: 4px solid magenta;
            box-shadow: 0 0 15px magenta;
            width: 80px;
            height: 80px;
            object-fit: cover;
            margin-top: 10px;
        }

        .highlight {
            color: #00ffff;
        }

        .highlight-nova {
            color: #ff00ff;
        }

        .card-wrapper {
            position: relative;
        }
    </style>


    <script>
        const payLink = document.getElementById('pay-link');
        if (payLink) {
            payLink.addEventListener('click', function (event) {
                event.preventDefault();
                // Kiểm tra trạng thái đăng nhập
                const isAuthenticated = @Json.Serialize(User.Identity.IsAuthenticated);
                if (!isAuthenticated) {
                  
                    Swal.fire({
                        title: 'OMG! Có rắc rối rồi.',
                        text: "Bạn phải đăng nhập để thực hiện yêu cầu này.",
                        icon: 'info',
                        confirmButtonColor: '#ed782b',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'OK',
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = '@Url.Action("Login", "Account")';
                        }
                    });
                } else {
                    // Nếu đã đăng nhập, submit form ngay
                    document.getElementById('payForm').submit();
                }
            });
        }
    </script>




}

