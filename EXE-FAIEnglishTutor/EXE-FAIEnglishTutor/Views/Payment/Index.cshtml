                    <a href="#" id="pay-link" class="btn btn-pay">🧾 Thanh toán</a>
                    <form asp-controller="Payment" id="payForm" asp-action="GenerateQR" style="display: none;" method="post">
                        <input type="hidden" name="planAmount" value="39000" />
                    </form>
                </div>
            </div>
        }
 
