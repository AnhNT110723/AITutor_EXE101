        </ul>
        <button class="btn btn-pay">🧾 Thanh toán</button>
        </div>

        <!-- FAI NOVA -->
        <div class="pricing-card">
        <div class="plan-title">FAI NOVA</div>
        <div class="price">650,000₫ cho 4 năm</div>
        <ul class="features text-start">
