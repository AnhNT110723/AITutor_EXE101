
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FAI English</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/course-gen.css">

    <style>
        /* Tạo wrapper để chứa cả navbar và head-info */
        .sticky-wrapper {
            position: sticky;
            top: 0;
            z-index: 100;
            /* Ưu tiên hiển thị phía trên nội dung khác */
            background: #e9eef5;
            /* Màu nền */
            height: 110px;
            padding-top: 30px;
            margin-top: -55px;
        }

            .sticky-wrapper .navbar {
                margin-top: -10px;
            }

        .content-source {
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar" class="active">
            <h1><a href="home.html" class="logo"><img src="~/Images/concoc.png" alt="Cup"></a></h1>
            <ul class="list-unstyled components mb-5">
                <li>
                    <a asp-controller="Ielts" asp-action="index" class="link-test">
                        <span class="fa fa-users"></span>
                        <span class="menu-text">Học Ielts</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Toeic" asp-action="index" class="link-test">
                        <span class="fas fa-graduation-cap icon"></span>
                        <span class="menu-text">Học Toeic</span>
                    </a>
                </li>
                <li class="active"> 
                    <a asp-controller="home" asp-action="index" class="link-test">
                        <span class="fa fa-frog"></span>
                        <span class="menu-text">AI Tutor</span>

                    </a>
                </li>
                <li>
                    <a asp-controller="selfStudy" asp-action="index" class="link-test">
                        <span class="fas fa-book-open"></span>
                        <span class="menu-text">Tự học</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="ParentCourse" asp-action="index" class="link-test">
                        <span class="bi bi-people-fill"></span>
                        <span class="menu-text">Trang học của cha mẹ</span>
                    </a>
                </li>

            </ul>

            <div class="footer">
                <p style="color: #667085;">
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is
                    made with <i class="icon-heart" aria-hidden="true"></i> by <a href="https://colorlib.com"
                                                                                  target="_blank">Colorlib.com</a>
                </p>
            </div>
        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5">
            <div class="sticky-wrapper">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">

                        <button type="button" id="sidebarCollapse" class="btn btn-sidebar-custom ">
                            <i class="fa fa-bars"></i>
                            <span class="sr-only">Toggle Menu</span>
                        </button>
                        <!-- Nút Back -->
                        <button class="btn btn-outline-secondary ml-2" onclick="history.back()">
                            <i class="fa fa-arrow-left"></i> Back
                        </button>
                        <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button"
                                data-toggle="collapse" data-target="#navbarSupportedContent"
                                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <i class="fa fa-bars"></i>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="nav navbar-nav ml-auto">
                                @*  <li class="nav-item active">
                                <a class="nav-link" href="home.html">Home</a>
                                </li>
                                <li class="nav-item">
                                <a class="nav-link" href="#">About</a>
                                </li>
                                <li class="nav-item">
                                <a class="nav-link" href="#">Portfolio</a>
                                </li> *@

                                @if (User.Identity.IsAuthenticated)
                                {
                                    // Đọc thông tin từ cookie
                                    var fullName = User.Identity.Name;
                                    var avatarUrl = User.FindFirst("Avatar")?.Value;
                                    <li class="nav-item dropdown">

                                        <a class="nav-link dropdown-toggle nav-link-avatar" href="#" id="avatarDropdown" role="button"
                                           data-bs-toggle="dropdown" aria-expanded="false">
                                            <div class="nav-img">
                                                <img src="@avatarUrl" alt="Avatar" class="img-fluid" style="border-radius: 50%;">
                                            </div>
                                        </a>
                                        <div class=" menu-items dropdown-menu dropdown-menu-end" aria-labelledby="avatarDropdown">
                                            <div class="menu-title">
                                                <h6 class="dropdown-header">Hello, <span>@fullName</span></h6>
                                            </div>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" asp-controller="Profile" asp-action="index">
                                                <i class="bi bi-person-circle"></i> View Profile
                                            </a>
                                            <div class="dropdown-divider"></div>
                                            <a id="logout-link" class="dropdown-item text-danger" href="#">
                                                <i class="bi bi-box-arrow-right"></i> <span id="logoutOption">Logout</span>
                                            </a>

                                            <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" style="display: none;"></form>

                                        </div>
                                    </li>
                                }
                                else
                                {
                                    <a class="btn-login-custom btn " asp-controller="Account" asp-action="Login">Đăng nhập</a>
                                }
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
            <div class="content-source">
                <div class="container-fluid">
                    <div class="body-container">
                        <h2 style="font-weight: 700; font-size: 1.5rem; margin: 10px 0 30px 0;">
                            Dạy con làm việc nhà
                        </h2>
                        <div class="row">
                            <!-- Video -->
                            <div class="col-lg-9 col-12 parent">
                                <video src="static/videos/clap.mp4" controls autoplay muted loop
                                       style="width: 100%; height: auto; border-radius: 10px;"></video>
                            </div>
                            <!-- List Items -->
                            <div class="col-lg-3 col-12 parent">
                                <h3 style="font-size: 16px; font-weight: bold;">Danh sách bài học</h3>
                                <div class="overflow-auto border rounded">
                                    <div class="list-group">
                                        <a href="#"
                                           class="list-group-item list-group-item-action d-flex align-items-center text-decoration-none"
                                           style="transition: background-color 0.3s;">
                                            <i class="bi bi-check-circle-fill fs-4 text-warning me-2"></i>
                                            <p class="mb-0">Lợi ích khi dạy con làm việc nhà</p>
                                        </a>
                                        <a href="#"
                                           class="list-group-item list-group-item-action d-flex align-items-center text-decoration-none"
                                           style="transition: background-color 0.3s;">
                                            <i class="bi bi-check-circle-fill fs-4 text-warning me-2"></i>
                                            <p class="mb-0">Luôn gương mẫu để trẻ noi theo</p>
                                        </a>
                                        <a href="#"
                                           class="list-group-item list-group-item-action active d-flex align-items-center text-decoration-none"
                                           style="transition: background-color 0.3s;">
                                            <i class="bi bi-check-circle-fill fs-4 text-warning me-2"></i>
                                            <p class="mb-0">Biến việc nhà thành trò chơi</p>
                                        </a>
                                        <a href="#"
                                           class="list-group-item list-group-item-action d-flex align-items-center text-decoration-none"
                                           style="transition: background-color 0.3s;">
                                            <i class="bi bi-play-circle-fill fs-4 text-secondary me-2"></i>
                                            <p class="mb-0">Giao việc phù hợp với lứa tuổi</p>
                                        </a>
                                        <a href="#"
                                           class="list-group-item list-group-item-action d-flex align-items-center text-decoration-none"
                                           style="transition: background-color 0.3s;">
                                            <i class="bi bi-play-circle-fill fs-4 text-secondary me-2"></i>
                                            <p class="mb-0">Dùng câu đề nghị</p>
                                        </a>
                                        <a href="#"
                                           class="list-group-item list-group-item-action d-flex align-items-center text-decoration-none"
                                           style="transition: background-color 0.3s;">
                                            <i class="bi bi-play-circle-fill fs-4 text-secondary me-2"></i>
                                            <p class="mb-0">Cùng làm việc nhà với trẻ</p>
                                        </a>
                                        <a href="#"
                                           class="list-group-item list-group-item-action d-flex align-items-center text-decoration-none"
                                           style="transition: background-color 0.3s;">
                                            <i class="bi bi-play-circle-fill fs-4 text-secondary me-2"></i>
                                            <p class="mb-0">Đừng quá kỳ vọng vào kết quả làm việc nhà</p>
                                        </a>
                                        <a href="#"
                                           class="list-group-item list-group-item-action d-flex align-items-center text-decoration-none"
                                           style="transition: background-color 0.3s;">
                                            <i class="bi bi-play-circle-fill fs-4 text-secondary me-2"></i>
                                            <p class="mb-0">Biểu dương, ghi nhận trẻ kịp thời</p>
                                        </a>
                                        <a href="#"
                                           class="list-group-item list-group-item-action d-flex align-items-center text-decoration-none"
                                           style="transition: background-color 0.3s;">
                                            <i class="bi bi-play-circle-fill fs-4 text-secondary me-2"></i>
                                            <p class="mb-0">Có những biện pháp khuyến khích</p>
                                        </a>
                                        <a 
                                           class="list-group-item list-group-item-action d-flex align-items-center text-decoration-none"
                                           style="transition: background-color 0.3s;">
                                            <i class="bi bi-play-circle-fill fs-4 text-secondary me-2"></i>
                                            <p class="mb-0">Có những biện pháp khuyến khích</p>
                                        </a>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="propose-course">
                <div class="container-fluid">
                    <div class="body-container">
                        <h6 style="font-weight: 700; margin: 20px 0 20px 0; color: black;">Khóa học đề xuất</h6>

                        <div class="row gx-1">

                            <!-- Khóa học 2 -->
                            <div class="col-lg-4 col-sm-6 col-12 parent">
                                <a asp-controller="ParentCourse" asp-action="Detail" class="card-link">
                                    <div class="custom-card">
                                        <div class="card-img">
                                            <img src="~/Images/course2.webp" class="card-img-top" alt="Khóa học 1">
                                        </div>

                                        <div class="card-body">
                                            <h5 class="card-title">Phát triển trí thông minh tương tác </h5>
                                            <div class="card-text">
                                                <p class="card-text-video">
                                                    <strong>Videos đã xem:</strong> 5/10
                                                </p>
                                                <p class="card-text-time">

                                                    <strong>Thời hạn:</strong> Trọn đời
                                                </p>
                                            </div>

                                        </div>
                                    </div>
                                </a>
                            </div>

                            <!-- Khóa học 3 -->
                            <div class="col-lg-4 col-sm-6 col-12 parent">
                                <a asp-controller="ParentCourse" asp-action="Detail" class="card-link">
                                    <div class="custom-card">
                                        <div class="card-img">
                                            <img src="~/Images/course3.webp" class="card-img-top" alt="Khóa học 1">
                                        </div>

                                        <div class="card-body">
                                            <h5 class="card-title">Phát triển thể chất - nhân cách cho trẻ</h5>
                                            <div class="card-text">
                                                <p class="card-text-video">
                                                    <strong>Videos đã xem:</strong> 5/10
                                                </p>
                                                <p class="card-text-time">

                                                    <strong>Thời hạn:</strong> Trọn đời
                                                </p>
                                            </div>

                                        </div>
                                    </div>
                                </a>
                            </div>

                            <div class="col-lg-4 col-sm-6 col-12 parent">
                                <a asp-controller="ParentCourse" asp-action="Detail" class="card-link">
                                    <div class="custom-card">
                                        <div class="card-img">
                                            <img src="~/Images/course4.webp" class="card-img-top" alt="Khóa học 1">
                                        </div>

                                        <div class="card-body">
                                            <h5 class="card-title">Phát triển tư duy</h5>
                                            <div class="card-text">
                                                <p class="card-text-video">
                                                    <strong>Videos đã xem:</strong> 5/10
                                                </p>
                                                <p class="card-text-time">

                                                    <strong>Thời hạn:</strong> Trọn đời
                                                </p>
                                            </div>

                                        </div>
                                    </div>
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>



        </div>

    </div>





    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script> *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js"></script>

</body>

</html>