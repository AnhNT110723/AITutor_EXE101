                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ situationId: situationId, voice: selectedVoice })
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
