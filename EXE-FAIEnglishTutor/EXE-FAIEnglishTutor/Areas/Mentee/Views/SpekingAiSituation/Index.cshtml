    <script>



        let selectedVoice = 'en-US-JennyNeural';
        let currentCharacterIndex = 0;
        let selectedCharacterImage = '/images/course2.webp'; // Ảnh mặc định
        const characters = document.querySelectorAll('.character-card');
        // Khóa lưu trữ trạng thái
        const sessionKey = `conversation_${situationId}`;

        function showCharacter(index) {
            characters.forEach((card, i) => {
                card.style.display = i === index ? 'block' : 'none';
            });
            selectedVoice = characters[index].getAttribute('data-voice');
            // Lưu URL ảnh của nhân vật được chọn
            selectedCharacterImage = characters[index].querySelector('img').getAttribute('src');
            document.querySelector('.prev').disabled = index === 0;
            document.querySelector('.next').disabled = index === characters.length - 1;
        }

        function prevCharacter() {
            if (currentCharacterIndex > 0) {
                currentCharacterIndex--;
                showCharacter(currentCharacterIndex);
            }
        }

        function nextCharacter() {
            if (currentCharacterIndex < characters.length - 1) {
                currentCharacterIndex++;
                showCharacter(currentCharacterIndex);
            }
        }

        function previewVoice(voice, text) {
            fetch('/Mentee/SpekingAiSituation/GenerateAudio', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ text: text, voice: voice })
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! Status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.audioUrl) {
                        const audio = new Audio(data.audioUrl);
                        audio.type = 'audio/mp3';
                        audio.play().catch(error => {
                            console.error('Audio play error:', error);
                            speak(text);
                        });
                    } else {
                        console.error('No audio URL returned');
                        speak(text);
                    }
                })
                .catch(error => {
                    console.error('Error fetching preview audio:', error);
                    speak(text);
                });
        }

        async function startConversation() {
            document.getElementById('welcomeScreen').style.display = 'none';
            const nurseImg = document.getElementById('nurseImage');
            nurseImg.style.opacity = '0';
            setTimeout(() => {
                nurseImg.setAttribute('src', selectedCharacterImage);
                nurseImg.style.opacity = '1';
            }, 300);
