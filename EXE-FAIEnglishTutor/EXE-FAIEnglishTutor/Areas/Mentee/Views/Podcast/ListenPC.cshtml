    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    

    <script>
                document.addEventListener("DOMContentLoaded", function () {
            // Audio control
            const audio = document.getElementById("audioPlayer");
            const playPauseBtn = document.getElementById("playPauseBtn");
            const prevBtn = document.getElementById("prevBtn");
            const nextBtn = document.getElementById("nextBtn");
            const progressBar = document.getElementById("progressBar");
            const currentTimeLabel = document.getElementById("currentTimeLabel");
            const totalTimeLabel = document.getElementById("totalTimeLabel");
            const playPauseIcon = playPauseBtn.querySelector("i");

            // Thay đổi giao diện khi phát/tạm dừng
            function setPlayingUI(isPlaying) {
                if (isPlaying) {
                    playPauseIcon.classList.remove("fa-play");
                    playPauseIcon.classList.add("fa-pause");
                    playPauseBtn.style.background = "#ff793f";
                } else {
                    playPauseIcon.classList.remove("fa-pause");
                    playPauseIcon.classList.add("fa-play");
                    playPauseBtn.style.background = "#ffa502";
                }
            }

            // Định dạng thời gian mm:ss
            function formatTime(sec) {
                sec = Math.floor(sec);
                const m = Math.floor(sec / 60);
                const s = sec % 60;
                return `${m}:${s.toString().padStart(2, '0')}`;
            }

            audio.addEventListener("loadedmetadata", function () {
                totalTimeLabel.textContent = formatTime(audio.duration);
                progressBar.max = Math.floor(audio.duration);
            });

            audio.addEventListener("timeupdate", function () {
                progressBar.value = Math.floor(audio.currentTime);
                currentTimeLabel.textContent = formatTime(audio.currentTime);
                highlightCurrentSentence();
            });

            playPauseBtn.addEventListener("click", function () {
                if (audio.paused) {
                    audio.play();
                    setPlayingUI(true);
                } else {
                    audio.pause();
                    setPlayingUI(false);
                }
            });

            audio.addEventListener("ended", function () {
                setPlayingUI(false);
                progressBar.value = 0;
                currentTimeLabel.textContent = "0:00";
            });

            prevBtn.addEventListener("click", function () {
                audio.currentTime = Math.max(0, audio.currentTime - 10);
            });

            nextBtn.addEventListener("click", function () {
                audio.currentTime = Math.min(audio.duration, audio.currentTime + 10);
            });

            progressBar.addEventListener("input", function () {
                audio.currentTime = progressBar.value;
            });

            // Transcript highlight (chia đều thời lượng cho từng câu)
            const transcript = `@Model.Content`;
            const sentences = transcript.match(/[^.!?]+[.!?]+/g) || [transcript];
            const transcriptContainer = document.getElementById('scriptList');
            sentences.forEach((sentence, idx) => {
                const span = document.createElement('span');
                span.textContent = sentence.trim() + " ";
                span.id = "sent_" + idx;
                transcriptContainer.appendChild(span);
            });

            function highlightCurrentSentence() {
                const duration = audio.duration || 1;
                const currentTime = audio.currentTime;
                const sentenceDuration = duration / sentences.length;
                const currIdx = Math.floor(currentTime / sentenceDuration);
                sentences.forEach((_, idx) => {
                    const el = document.getElementById('sent_' + idx);
                    if (!el) return;
                    el.classList.toggle('active', idx === currIdx);
                });
            }
        });
    </script>

